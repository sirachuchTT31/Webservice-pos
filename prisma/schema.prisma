generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int                @id @default(autoincrement())
  email             String             @db.VarChar(50)
  first_name        String             @db.VarChar(50)
  last_name         String             @db.VarChar(50)
  address           String?            @db.VarChar(255)
  district          String?            @db.VarChar(100)
  sub_district      String?            @db.VarChar(100)
  province          String?            @db.VarChar(100)
  zip_code          String?            @db.VarChar(5)
  telephone         String?            @db.VarChar(10)
  username          String             @db.VarChar(100)
  password          String             @db.VarChar(100)
  first_login       Boolean            @default(false)
  is_active         Boolean            @default(true)
  created_at        DateTime           @default(now()) @db.Timestamp(3)
  created_by        Int?
  updated_at        DateTime           @default(now()) @updatedAt @db.Timestamp(3)
  updated_by        Int?
  TrialPeriodAccout TrialPeriodAccout?
  UserOnCompany     UserOnCompany[]
  UserOnRole        UserOnRole[]
}

model UserOnRole {
  //Mapping User on Role
  User       User       @relation(fields: [user_id], references: [id])
  user_id    Int
  MasterRole MasterRole @relation(fields: [role_id], references: [id])
  role_id    Int
  created_at DateTime   @default(now()) @db.Timestamp(3)
  created_by Int?
  updated_at DateTime   @default(now()) @updatedAt @db.Timestamp(3)
  updated_by Int?
  @@id([user_id, role_id])
}

model UserOnCompany {
  //Mapping User on Company
  User          User          @relation(fields: [user_id], references: [id])
  user_id       Int
  MasterCompany MasterCompany @relation(fields: [company_id], references: [id])
  company_id    Int
  created_at    DateTime      @default(now()) @db.Timestamp(3)
  created_by    Int?
  updated_at    DateTime      @default(now()) @updatedAt @db.Timestamp(3)
  updated_by    Int?

  @@id([user_id, company_id])
}

model MasterCompany {
  id            Int             @id @default(autoincrement())
  company_code  String          @db.VarChar(10)
  name_th       String          @db.VarChar(50)
  name_en       String          @db.VarChar(50)
  is_active     Boolean         @default(false)
  created_at    DateTime        @default(now()) @db.Timestamp(3)
  created_by    Int?
  updated_at    DateTime        @default(now()) @updatedAt @db.Timestamp(3)
  updated_by    Int?
  UserOnCompany UserOnCompany[]
}

model OtpForgotPassword {
  id        Int      @id @default(autoincrement())
  email     String   @db.VarChar(50)
  otp       String   @db.VarChar(6)
  is_verify Boolean  @default(false)
  expires   DateTime
}

model TrialPeriodAccout {
  id         Int      @id @default(autoincrement())
  due_date   DateTime @db.Date
  created_at DateTime @default(now()) @db.Timestamp(3)
  created_by Int?
  updated_at DateTime @default(now()) @updatedAt @db.Timestamp(3)
  updated_by Int?
  User       User?    @relation(fields: [user_id], references: [id])
  user_id    Int?     @unique
}

model MasterRole {
  id          Int          @id @default(autoincrement())
  role_code   String       @db.VarChar(5)
  name        Role
  description String       @db.VarChar(50)
  created_at  DateTime     @default(now()) @db.Timestamp(3)
  created_by  Int?
  updated_at  DateTime     @default(now()) @updatedAt @db.Timestamp(3)
  updated_by  Int?
  UserOnRole  UserOnRole[]
}

enum Role {
  SUPER_ADMIN
  ADMIN_COMPANY
  SALE
  STOCK
  ACCOUNT
  TRIAL_PERIOD
}
